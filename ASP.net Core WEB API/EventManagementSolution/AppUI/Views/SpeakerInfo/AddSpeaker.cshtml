@model AppUI.Models.SpeakersDetails
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<head>
    <title>Add New Speaker</title>
</head>
<body>
    <h2>Add New Speaker</h2>

    <form asp-route="SaveSpeaker" method="post">
        <div>
            <label asp-for="SpeakerId">Speaker ID:</label>
            <input type="number" asp-for="SpeakerId" placeholder="Enter Speaker ID" />
        </div>

        <div>
            <label asp-for="SpeakerName">Speaker Name:</label>
            <input type="text" asp-for="SpeakerName" placeholder="Enter Speaker Name" />
        </div>

        <div>
            <input type="submit" value="Add Speaker" />
        </div>
    </form>
</body>
</html>
